---
import "../styles/global.css";
import NoticeBuilder from "../components/NoticeBuilder";
import { getBuildingOptions } from "../data/buildings";
import { parseBuildingKeys } from "../lib/access";

const env = Astro.locals.runtime?.env ?? {};
const buildingKeys = parseBuildingKeys(env.BUILDING_KEYS_JSON);
const buildingOptions = getBuildingOptions(buildingKeys);
const hasResidentKeys =
  Object.keys(buildingKeys).length > 0 || Boolean(env.BUILDING_ACCESS_KEY && env.BUILDING_ACCESS_KEY.trim());
const hasSubmissionStore = Boolean(env.SUBMISSIONS_KV);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Building Ledger | Tenant Notice Builder</title>
    <meta
      name="description"
      content="Build short, dated repair notices and keep a private record for your building."
    />
  </head>
  <body>
    <NoticeBuilder
      client:load
      buildingOptions={buildingOptions}
      shareReadiness={{ hasResidentKeys, hasSubmissionStore }}
    />
  </body>
</html>
