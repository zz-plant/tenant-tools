---
import "../../styles/global.css";
import { fieldDefinitions, issueOptions, stages, zoneOptions } from "../../data/noticeData";
import { portfolioOptions } from "../../data/portfolioOptions";
import { getBuildingIdsForKey, isResidentKeyRecognized } from "../../lib/access";
import { formatResidentReportCount } from "../../lib/buildingDashboard";
import { formatTimelineDate } from "../../lib/dateUtils";
import { getSubmissionTimelineEntries } from "../../lib/submissionTimeline";
import { buildBuildingDashboardUrl } from "../../lib/navigation";
import SeoHead from "../../components/SeoHead.astro";
import AccessKeyPanel from "../../components/AccessKeyPanel.astro";

export const prerender = false;

const { id } = Astro.params;
const kv = Astro.locals.runtime?.env?.SUBMISSIONS_KV;
const url = new URL(Astro.request.url);
const accessKey = url.searchParams.get("key");
const env = Astro.locals.runtime?.env ?? {};
const hasAccess = isResidentKeyRecognized(accessKey, env);
const submission = id && kv && hasAccess ? await kv.get(`submission:${id}`, { type: "json" }) : null;

type SubmissionShape = {
  building: string;
  issue: string;
  issueLabel: string;
  stage: "A" | "B" | "C";
  language: string;
  portfolio: "continuum" | "other";
  startDate: string;
  reportDate: string;
  reportCount: number;
  simpleEnglish: boolean;
  zone?: string;
  firstMessageDate?: string;
  ticketDate?: string;
  ticketNumber?: string;
  issueDetails: Record<string, string>;
};

const rawSubmissionRecord = submission as SubmissionShape | null;
const allowedBuildingIds = getBuildingIdsForKey(accessKey, env);
const hasBuildingAccess = rawSubmissionRecord
  ? allowedBuildingIds.includes("*") || allowedBuildingIds.includes(rawSubmissionRecord.building)
  : false;
const submissionRecord = hasAccess && hasBuildingAccess ? rawSubmissionRecord : null;

const issueLabel =
  submissionRecord?.issueLabel ||
  issueOptions.find((issue) => issue.id === submissionRecord?.issue)?.label ||
  submissionRecord?.issue ||
  "Issue";

const stageLabel = submissionRecord ? stages[submissionRecord.stage] : "";
const detailEntries = submissionRecord ? Object.entries(submissionRecord.issueDetails || {}) : [];
const zoneLabel = zoneOptions.find((option) => option.id === submissionRecord?.zone)?.label || "Not listed";
const portfolioLabel =
  portfolioOptions.find((option) => option.id === submissionRecord?.portfolio)?.label || "Not listed";
const startDateLabel = submissionRecord?.startDate || "Not listed";
const reportDateLabel = submissionRecord?.reportDate || "Not listed";
const reportCountLabel =
  typeof submissionRecord?.reportCount === "number"
    ? formatResidentReportCount(submissionRecord.reportCount)
    : "Not listed";

const dashboardUrl =
  submissionRecord?.building
    ? buildBuildingDashboardUrl({ buildingId: submissionRecord.building, accessKey })
    : "";

const timelineEntries = submissionRecord ? getSubmissionTimelineEntries(submissionRecord) : [];
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <SeoHead
      title="Record summary | Building Ledger"
      description="Private resident record summary with timeline and factual details."
      canonicalPath={`/submissions/${encodeURIComponent(id ?? "")}`}
      noindex={true}
    />
  </head>
  <body>
    <div class="page">
      <a class="skip-link" href="#main">Skip to main content</a>
      <header class="hero">
        <div class="hero-main">
          <p class="eyebrow">Shared ledger record</p>
          <h1>Issue record</h1>
          <p class="tagline">This permalink shows the saved issue record.</p>
        </div>
      </header>

      <main class="layout" id="main">
        <section class="panel panel-highlight preview-panel">
          {!hasAccess ? (
            <AccessKeyPanel
              title="Access key required"
              helperLines={[
                "This record is private to residents in the building.",
                "The link can include private details.",
                "Ask a resident steward for the key.",
                "If the key is correct but this still does not load, ask a steward to check the link.",
              ]}
              warning="Do not share the key or link in public."
              backLabel="Back to notice builder"
            />
          ) : submissionRecord ? (
            <>
              <div class="summary-grid">
                <div class="summary-card">
                  <p class="summary-label">Building</p>
                  <p class="summary-value">{submissionRecord.building}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Portfolio</p>
                  <p class="summary-value">{portfolioLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Issue</p>
                  <p class="summary-value">{issueLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Zone</p>
                  <p class="summary-value">{zoneLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Stage</p>
                  <p class="summary-value">{stageLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Start date</p>
                  <p class="summary-value">{startDateLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Report date</p>
                  <p class="summary-value">{reportDateLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Reports</p>
                  <p class="summary-value">{reportCountLabel}</p>
                </div>
              </div>
              <p class="helper">Review this summary before sharing. Small report counts may be hidden for privacy.</p>
              {dashboardUrl && (
                <a class="button button-secondary" href={dashboardUrl}>
                  Back to building dashboard
                </a>
              )}

              <div class="export-block">
                <div>
                  <h3>Issue timeline</h3>
                  <p class="helper">Read-only record of key dates.</p>
                </div>
                {timelineEntries.length > 0 ? (
                  <ul class="timeline">
                    {timelineEntries.map((entry) => (
                      <li key={`${entry.label}-${entry.date}`}>
                        <p class="timeline-date">{formatTimelineDate(entry.date)}</p>
                        <p class="timeline-label">{entry.label}</p>
                      </li>
                    ))}
                  </ul>
                ) : (
                  <p class="helper">No timeline dates were saved.</p>
                )}
              </div>



              <div class="export-block share-checklist" id="share-checklist">
                <div>
                  <h3>Before you share</h3>
                  <p class="helper">Check all items before you copy the link.</p>
                </div>
                <label class="checkbox-label">
                  <input type="checkbox" class="share-check" />
                  I removed names.
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" class="share-check" />
                  I removed unit numbers.
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" class="share-check" />
                  I removed phone numbers and email addresses.
                </label>
                <button class="button button-secondary" type="button" data-copy-link disabled title="Complete all checks to copy the link">Copy this record link</button>
                <p class="helper" data-share-status role="status" aria-live="polite">Complete all checks to copy the link.</p>
              </div>

              <div class="export-block">
                <div>
                  <h3>Details saved</h3>
                  <p class="helper">Short factual details only. Evidence files are not shown here.</p>
                </div>
                {(submissionRecord.ticketDate || submissionRecord.ticketNumber) && (
                  <ul class="submission-detail-list detail-grid">
                    {submissionRecord.ticketDate && (
                      <li key="ticket-date">
                        <strong>311 ticket date:</strong> {submissionRecord.ticketDate}
                      </li>
                    )}
                    {submissionRecord.ticketNumber && (
                      <li key="ticket-number">
                        <strong>311 ticket number:</strong> {submissionRecord.ticketNumber}
                      </li>
                    )}
                  </ul>
                )}
                {detailEntries.length > 0 ? (
                  <ul class="submission-detail-list detail-grid">
                    {detailEntries.map(([key, value]) => {
                      const label = fieldDefinitions[key as keyof typeof fieldDefinitions]?.label || key;
                      return (
                        <li key={key}>
                          <strong>{label}:</strong> {value}
                        </li>
                      );
                    })}
                  </ul>
                ) : submissionRecord.ticketDate || submissionRecord.ticketNumber ? null : (
                  <p class="helper">No details were saved.</p>
                )}
              </div>
            </>
          ) : (
            <div>
              <h2>We could not find this record.</h2>
              <p class="helper">Check the link, or confirm you used the correct building key.</p>
              <a class="button" href="/">Back to builder</a>
            </div>
          )}
        </section>
      </main>

      <footer class="site-footer">
        <p>Safety first: review this summary before sharing.</p>
      </footer>
    </div>

    <script>
      const checks = Array.from(document.querySelectorAll('.share-check'));
      const status = document.querySelector('[data-share-status]');
      const copyButton = document.querySelector('[data-copy-link]');
      const refreshShareStatus = () => {
        if (!status || checks.length === 0) {
          return;
        }
        const done = checks.every((item) => item instanceof HTMLInputElement && item.checked);
        if (copyButton instanceof HTMLButtonElement) {
          copyButton.disabled = !done;
          copyButton.setAttribute('aria-disabled', String(!done));
          copyButton.title = done ? 'Copy record link' : 'Complete all checks to copy the link';
        }
        status.textContent = done ? 'Checklist complete. You can copy the link.' : 'Complete all checks to copy the link.';
      };

      const copyRecordLink = async () => {
        if (!(copyButton instanceof HTMLButtonElement) || copyButton.disabled) {
          return;
        }

        const previousText = copyButton.textContent;
        copyButton.disabled = true;
        copyButton.textContent = 'Copying...';

        try {
          await navigator.clipboard.writeText(window.location.href);
          if (status) {
            status.textContent = 'Link copied. Share only with residents who have the key.';
          }
          copyButton.textContent = 'Copied';
          window.setTimeout(() => {
            copyButton.textContent = 'Copy this record link';
            refreshShareStatus();
          }, 1400);
        } catch {
          if (status) {
            status.textContent = 'Could not copy the link. Copy from the address bar.';
          }
          copyButton.textContent = previousText || 'Copy this record link';
          refreshShareStatus();
        }
      };

      checks.forEach((item) => item.addEventListener('change', refreshShareStatus));
      if (copyButton instanceof HTMLButtonElement) {
        copyButton.addEventListener('click', copyRecordLink);
      }
      refreshShareStatus();
    </script>
  </body>
</html>
