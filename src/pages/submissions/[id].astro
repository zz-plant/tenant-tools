---
import "../../styles/global.css";
import { fieldDefinitions, issueOptions, stages, zoneOptions } from "../../data/noticeData";
import { portfolioOptions } from "../../data/portfolioOptions";
import { getBuildingIdsForKey, isResidentKeyRecognized } from "../../lib/access";

export const prerender = false;

const { id } = Astro.params;
const kv = Astro.locals.runtime?.env?.SUBMISSIONS_KV;
const url = new URL(Astro.request.url);
const accessKey = url.searchParams.get("key");
const env = Astro.locals.runtime?.env ?? {};
const hasAccess = isResidentKeyRecognized(accessKey, env);
const submission = id && kv && hasAccess ? await kv.get(`submission:${id}`, { type: "json" }) : null;

type SubmissionShape = {
  building: string;
  issue: string;
  issueLabel: string;
  stage: "A" | "B" | "C";
  language: string;
  portfolio: "continuum" | "other";
  startDate: string;
  reportDate: string;
  reportCount: number;
  simpleEnglish: boolean;
  zone?: string;
  firstMessageDate?: string;
  ticketDate?: string;
  ticketNumber?: string;
  issueDetails: Record<string, string>;
};

const rawSubmissionRecord = submission as SubmissionShape | null;
const allowedBuildingIds = getBuildingIdsForKey(accessKey, env);
const hasBuildingAccess = rawSubmissionRecord
  ? allowedBuildingIds.includes("*") || allowedBuildingIds.includes(rawSubmissionRecord.building)
  : false;
const submissionRecord = hasAccess && hasBuildingAccess ? rawSubmissionRecord : null;

const issueLabel =
  submissionRecord?.issueLabel ||
  issueOptions.find((issue) => issue.id === submissionRecord?.issue)?.label ||
  submissionRecord?.issue ||
  "Issue";

const stageLabel = submissionRecord ? stages[submissionRecord.stage] : "";
const detailEntries = submissionRecord ? Object.entries(submissionRecord.issueDetails || {}) : [];
const zoneLabel = zoneOptions.find((option) => option.id === submissionRecord?.zone)?.label || "Not listed";
const portfolioLabel =
  portfolioOptions.find((option) => option.id === submissionRecord?.portfolio)?.label || "Not listed";

const timelineEntries = submissionRecord
  ? [
      submissionRecord.startDate
        ? { label: "Issue started", date: submissionRecord.startDate }
        : null,
      submissionRecord.stage === "A" && submissionRecord.reportDate
        ? { label: "Notice sent", date: submissionRecord.reportDate }
        : null,
      (submissionRecord.stage === "B" || submissionRecord.stage === "C") && submissionRecord.firstMessageDate
        ? { label: "First notice sent", date: submissionRecord.firstMessageDate }
        : null,
      (submissionRecord.stage === "B" || submissionRecord.stage === "C") && submissionRecord.reportDate
        ? {
            label: submissionRecord.stage === "B" ? "Follow-up sent" : "Final notice sent",
            date: submissionRecord.reportDate,
          }
        : null,
      submissionRecord.ticketDate ? { label: "311 ticket logged", date: submissionRecord.ticketDate } : null,
    ]
      .filter(Boolean)
      .sort((a, b) => (a?.date || "").localeCompare(b?.date || ""))
  : [];

const formatTimelineDate = (value: string) => {
  const parsed = new Date(value);
  if (Number.isNaN(parsed.valueOf())) {
    return value;
  }
  return parsed.toLocaleDateString("en-US", { month: "short", day: "numeric" });
};
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Submission | Tenant Notice Builder</title>
  </head>
  <body>
    <div class="page">
      <header class="hero">
        <div class="hero-main">
          <p class="eyebrow">Shared ledger entry</p>
          <h1>Issue submission</h1>
          <p class="tagline">This permalink shows the saved issue summary.</p>
        </div>
      </header>

      <main class="layout">
        <section class="panel panel-highlight preview-panel">
          {!hasAccess ? (
            <div>
              <h2>Access key required</h2>
              <p class="helper">Add your building key to the URL to view this submission.</p>
            </div>
          ) : submissionRecord ? (
            <>
              <div class="summary-grid">
                <div class="summary-card">
                  <p class="summary-label">Building</p>
                  <p class="summary-value">{submissionRecord.building}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Portfolio</p>
                  <p class="summary-value">{portfolioLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Issue</p>
                  <p class="summary-value">{issueLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Zone</p>
                  <p class="summary-value">{zoneLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Stage</p>
                  <p class="summary-value">{stageLabel}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Start date</p>
                  <p class="summary-value">{submissionRecord.startDate}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Report date</p>
                  <p class="summary-value">{submissionRecord.reportDate}</p>
                </div>
                <div class="summary-card">
                  <p class="summary-label">Reports</p>
                  <p class="summary-value">{submissionRecord.reportCount}</p>
                </div>
              </div>

              <div class="export-block">
                <div>
                  <h3>Issue timeline</h3>
                  <p class="helper">Read-only record of key dates.</p>
                </div>
                {timelineEntries.length > 0 ? (
                  <ul class="timeline">
                    {timelineEntries.map((entry) => (
                      <li>
                        <p class="timeline-date">{formatTimelineDate(entry.date)}</p>
                        <p class="timeline-label">{entry.label}</p>
                      </li>
                    ))}
                  </ul>
                ) : (
                  <p class="helper">No timeline dates were saved.</p>
                )}
              </div>

              <div class="export-block">
                <div>
                  <h3>Details saved</h3>
                  <p class="helper">Short factual details only.</p>
                </div>
                {(submissionRecord.ticketDate || submissionRecord.ticketNumber) && (
                  <ul class="submission-detail-list">
                    {submissionRecord.ticketDate && (
                      <li>
                        <strong>311 ticket date:</strong> {submissionRecord.ticketDate}
                      </li>
                    )}
                    {submissionRecord.ticketNumber && (
                      <li>
                        <strong>311 ticket number:</strong> {submissionRecord.ticketNumber}
                      </li>
                    )}
                  </ul>
                )}
                {detailEntries.length > 0 ? (
                  <ul class="submission-detail-list">
                    {detailEntries.map(([key, value]) => {
                      const label = fieldDefinitions[key as keyof typeof fieldDefinitions]?.label || key;
                      return (
                        <li>
                          <strong>{label}:</strong> {value}
                        </li>
                      );
                    })}
                  </ul>
                ) : submissionRecord.ticketDate || submissionRecord.ticketNumber ? null : (
                  <p class="helper">No details were saved.</p>
                )}
              </div>
            </>
          ) : (
            <div>
              <h2>We could not find this submission.</h2>
              <p class="helper">Check the link, or confirm you used the correct building key.</p>
              <a class="button" href="/">Back to builder</a>
            </div>
          )}
        </section>
      </main>

      <footer class="site-footer">
        <p>Safety first: this summary does not include names or unit numbers.</p>
      </footer>
    </div>
  </body>
</html>
